# soba CLI configuration example
github:
  # Authentication method: 'gh', 'env', or omit for auto-detect
  # auth_method: gh

  # GitHub Personal Access Token (used when auth_method is 'env' or omitted)
  # Generate at: https://github.com/settings/tokens
  # If auth_method is 'gh', this field can be omitted
  token: ${GITHUB_TOKEN}

  # Default repository to monitor (owner/repo format)
  repository: owner/repo

claude:
  # Claude API Key
  api_key: ${CLAUDE_API_KEY}

  # Model to use (optional)
  model: claude-3-opus-20240229

workflow:
  # Polling interval in seconds
  interval: 60

  # Use tmux for Claude execution (default: true)
  # Set to false for CI/CD environments or debugging
  use_tmux: true

  # Maximum concurrent workflows
  max_concurrent: 3

  # Workflow timeout in seconds
  timeout: 3600

logging:
  # Log level: debug, info, warn, error
  level: info

  # Log file path (optional)
  file: ~/.soba/logs/soba.log